<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.leafye.ffmpegapp.fragment.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_audioHandleFragment"
            app:destination="@id/audioHandleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_videoHandleFragment"
            app:destination="@id/videoHandleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_videoPlayFragment"
            app:destination="@id/videoPlayFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cMediaFragment"
            app:destination="@id/cMediaFragment" />
    </fragment>
    <fragment
        android:id="@+id/audioHandleFragment"
        android:name="com.leafye.ffmpegapp.fragment.AudioHandleFragment"
        android:label="AudioHandleFragment" />
    <fragment
        android:id="@+id/videoHandleFragment"
        android:name="com.leafye.ffmpegapp.fragment.VideoHandleFragment"
        android:label="VideoHandleFragment" />

    <fragment
        android:id="@+id/videoPlayFragment"
        android:name="com.leafye.ffmpegapp.fragment.VideoPlayFragment"
        android:label="VideoPlayFragment" />

    <fragment
        android:id="@+id/cMediaFragment"
        android:name="com.leafye.ffmpegapp.fragment.CMediaFragment"
        android:label="CMediaFragment" />
</navigation>